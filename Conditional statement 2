#include<stdio.h>

int main()
{
    printf("Pick a food item: \n 1.Burger,Rs100 \n 2.Chicken roll,Rs120 \n 3.Panner roll,Rs110 \n 4.Pizza,Rs200 \n 5.Milkshake,Rs60");
    
    int choice;
    printf("\nPlease enter your choice number: ");
    scanf("%d", &choice);
    
    
    switch(choice)
    {
        case 1:
            printf("Food item - Burger \nPrice - Rs100");
            break;
        case 2:
            printf("Food item - Chicken roll \nPrice - Rs120");
            break;
        case 3:
            printf("Food item - Panner roll \nPrice - Rs110");
            break;
        case 4:
            printf("Food item - Pizza \nPrice - Rs200");
            break;
        case 5:
            printf("Food item - Milkshake \nPrice - Rs60");
            break;
        default : printf("Invaild choice");
        
    }
    
}
